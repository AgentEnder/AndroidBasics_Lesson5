<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.craig.helloandroid.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src = "@drawable/udacity"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Udacity"
        android:textStyle="bold"
        android:textSize="30sp"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingHorizontal="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "2465 Latham St"
        android:textStyle="italic"
        android:textSize="24sp"
        android:fontFamily="serif-monospace"
        android:paddingHorizontal="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Mountain View, CA 94043"
        android:textStyle="italic"
        android:textSize="24sp"
        android:fontFamily="serif-monospace"
        android:paddingHorizontal="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "650-555-5555"
        android:textStyle="normal"
        android:textSize="24sp"
        android:fontFamily="serif-monospace"
        android:paddingHorizontal="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:textStyle="italic|bold"
        android:text="http://www.udacity.com"
        android:textSize="24sp"
        android:paddingHorizontal="15dp"
        />

</LinearLayout>
